<h2>Available drones</h2>
{{#each drones}}
<ul>
    <p><li>{{this.name}}</li></p>
    <p>Propellers: {{this.propellers}}</p>
    <p>Max Speed: {{this.maxSpeed}}</p>
</ul>
<div class=buttons>
    <a class="nav-link" href="/drones/{{this._id}}/edit">
        <button type="submit" class="btn btn-sm btn-outline-secondary">Edit Drone</button>
    </a>
    <form method="POST" action="/drones/{{this._id}}/delete">
        <button type="submit" class="btn btn-sm btn-outline-secondary">Delete Drone</button>
    </form>
</div>
{{/each}}